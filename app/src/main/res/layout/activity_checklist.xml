<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobilechecklistgeralbrlog.brasilrisk.com.brlog.Activity_checklist"
    android:padding="0dp"
    android:background="#EEEEEE">
    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.kelry.BrasilRisk_MobileChecklis.Activity_checklist"
        android:padding="10dp"
        android:background="#EEEEEE">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btn_finalChecklist"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape"
            android:elevation="0dp"
            android:text="CONTINUAR"
            android:textColor="@color/graylight"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:fontFamily="@font/roboto"
            tools:ignore="MissingConstraints" />

    </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>
